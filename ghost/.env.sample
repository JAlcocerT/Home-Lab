MYSQL_DATABASE=
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_ROOT_PASSWORD=

## API usage (optional but recommended for docs/examples)
# Public site URL Ghost is configured with (matches docker-compose.yml -> environment.url)
GHOST_URL=http://192.168.1.8:8018

# Read-only Content API key (create via Ghost Admin -> Settings -> Integrations)
GHOST_CONTENT_API_KEY=

# Admin API key in the form key_id:secret (KEEP PRIVATE)
GHOST_ADMIN_API_KEY=

# Optional: precomputed Admin JWT for quick testing (typically generated just-in-time, expires in ~5m)
# GHOST_ADMIN_JWT=