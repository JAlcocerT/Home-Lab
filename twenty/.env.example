TAG=latest

# Database
PG_DATABASE_USER=postgres
# IMPORTANT: Use a strong password WITHOUT special characters
PG_DATABASE_PASSWORD=change_me_strong_no_special_chars
PG_DATABASE_HOST=db
PG_DATABASE_PORT=5432

# Cache
REDIS_URL=redis://redis:6379

# Public URL of your instance
# - Use http://<IP>:3000 if accessing directly without reverse proxy
# - Use https://your.domain if behind SSL-terminating reverse proxy
SERVER_URL=http://localhost:3000

# Generate a secure random string: `openssl rand -base64 32`
APP_SECRET=replace_me_with_a_random_string

# Storage
# local = store files inside container volume (default)
# s3    = external object storage (set the S3_* vars below)
STORAGE_TYPE=local
# STORAGE_S3_REGION=
# STORAGE_S3_NAME=
# STORAGE_S3_ENDPOINT=

# Advanced (usually leave as-is)
#DISABLE_DB_MIGRATIONS=false
#DISABLE_CRON_JOBS_REGISTRATION=false
